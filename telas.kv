<ChatScreen>:
    name: 'chat'
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        canvas.before:
            Color:
                rgba: 0.1, 0.6, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            size_hint_y: None
            height: dp(56)

            MDIconButton:
                icon: "arrow-left"  # Ícone de seta para a esquerda
                pos_hint: {'x': 0.02, 'top': 0.98}
                halign: 'center'
                user_font_size: "24sp"
                on_press: app.root.current = 'dashboard'
        MDLabel:
            text: "Bem-vindo! Faça uma pergunta."
            color: 1, 1, 1, 1

        TextInput:
            id: question_input
            multiline: False
            background_color: 1, 1, 1, 1

        MDFlatButton:
            text: "Enviar"
            size_hint: 0.2, 0.1

        MDFlatButton:
            text: "Botão de áudio"
            size_hint: 0.2, 0.1

