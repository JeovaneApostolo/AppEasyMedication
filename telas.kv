ScreenManager:
    SplashScreen:
    RegisterScreen:
    LoginScreen:
    DashboardScreen:
    MedScreen:
    AlarmeScreen:
    ChatScreen:

<SplashScreen>:
    name: 'splash'
    BoxLayout:
        size_hint: None, None
        size: dp(400), dp(600)  # Definindo o tamanho da tela
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'
        spacing: '10dp'
        padding: '10dp'
        canvas.before:
            Color:
                rgba: .1, .600, .1, 1  # Configuração de cor
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            source: "images/docs2.png"
            size_hint: None, None
            size: dp(200), dp(200)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            allow_stretch: True
        
        MDLabel:
            text: '[b]Eazy Medication[/b]'  # Adicionando tags [b] para negrito
            halign: 'center'
            markup: True  # Habilitando a interpretação das tags de marcação
            font_size: '50sp'  # Ajustando o tamanho da fonte
            pos_hint: {'center_y': 0.28}  # Movendo o rótulo para baixo

        MDLabel:
            text: 'Sistema de Controle de medicamentos'
            halign: 'center'
            pos_hint: {'center_y': 0.20}

        MDRaisedButton:
            text: 'Avançar'
            pos_hint: {'center_x': 0.5}
            md_bg_color: 0.5, 0.5, 0.5, 1  # Cor cinza da caixa
            on_press: app.root.current = 'register'

<RegisterScreen>:
    name: 'register'
    BoxLayout:
        size_hint: None, None
        size: dp(400), dp(600)  # Definindo o tamanho da tela
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'
        spacing: '10dp'
        padding: '10dp'
        canvas.before:
            Color:
                rgba: .1, .600, .1, 1  # Configuração de cor
            Rectangle:
                pos: self.pos
                size: self.size

        MDIconButton:
            icon: "arrow-left"  # Ícone de seta para a esquerda
            pos_hint: {'x': 0.02, 'top': 0.98}
            halign: 'center'
            user_font_size: "24sp"
            on_press: app.root.current = 'splash' #Voltar

        Image:
            source: "images/Register_Tela.png"  # Substitua pelo caminho da imagem desejada
            size_hint: None, None
            size: dp(180), dp(180)
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            allow_stretch: True

        MDLabel:
            text: '[b]Registre-se[/b]'  # Adicionando tags [b] para negrito
            halign: 'center'
            markup: True  # Habilitando a interpretação das tags de marcação
            font_size: '30sp'  # Ajustando o tamanho da fonte
            pos_hint: {'center_x': 0.5, 'top': 0.98}  # Movendo o rótulo para baixo


        MDTextField:
            hint_text: "Nome"
            helper_text: "Digite seu nome"
            helper_text_mode: "on_focus"
            icon_left: 'account'
            hint_text_color_normal: '#000000'
            hint_text_color_focus: '#000000'
            
        MDTextField:
            hint_text: "Idade"
            helper_text: "Digite sua idade"
            helper_text_mode: "on_focus"
            icon_left: 'calendar-account'
            hint_text_color_normal: '#000000'
            hint_text_color_focus: '#000000'

        MDTextField:
            hint_text: "CPF"
            helper_text: "Digite seu CPF"
            helper_text_mode: "on_focus"
            icon_left: 'badge-account-horizontal-outline'
            hint_text_color_normal: '#000000'
            hint_text_color_focus: '#000000'

        MDTextField:
            hint_text: "Senha"
            helper_text: "Digite sua senha"
            helper_text_mode: "on_focus"
            password: True
            icon_left: 'key-variant'
            hint_text_color_normal: '#000000'
            hint_text_color_focus: '#000000'

        MDFlatButton:
            text: 'Cadastrar'
            pos_hint: {'center_x': 0.5}
            md_bg_color: 0.5, 0.5, 0.5, 1  # Cor cinza da caixa
            on_press: app.root.current = 'dashboard'
        
        MDRectangleFlatButton:
            text: 'Login'
            pos_hint: {'center_x': 0.9, 'y': 0.05}
            on_press: app.root.current = 'login'

